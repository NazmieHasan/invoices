<h3>Търсене на студент по име</h3>
<form method="POST">
    <input type="text" name="firstName">
    <input type="submit" value="Търси">
</form>
   
{% if (student is not empty) %}
    <p>Резултат(и)</p>
    {% for s in student %}
        <p>{{ s.firstName }} {{ s.fathersName }} {{ s.lastName }} {{ s.personalNumber }}</p>
    {% endfor %}
{% endif %}
    
{% if (student is empty) %}
    <p>Няма намерен резултат</p>
{% endif %}