{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
    
    <div class="container body-content span=8 offset=2">
        <div class="well">
            {% for msg in app.session.flashbag.get('info')  %}
                <div class="alert alert-success" id="info">
                    {{ msg }}
                </div>
            {% endfor %}
            <form name="authenticate" class="form-horizontal" action="{{ path('security_login') }}" method="post">
                <fieldset>
                    <legend>Вход</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Имейл</label>
                        <div class="col-sm-4">
                            <input type="email" class="form-control" id="user_email" placeholder="Имейл" name="_username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="password">Парола</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password" placeholder="Парола" name="_password">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Вход</button>
                            <a href="{{ path('user_register') }}" class="a-custom">Регистрация</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    
{% endblock %}
