{% extends 'base.html.twig' %}

{% block main %}

<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="{{ path('course_create') }}" method="POST">
            <fieldset>
                <legend>New Course</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="course_title">Course Title</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="course_title" placeholder="Course Title" name="course[title]">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="course_description">Description</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="course_description" placeholder="Description" name="course[description]"></textarea>
                    </div>
                </div>
                 <div class="form-group">
                    <label class="col-sm-4 control-label" for="course_startDate">Start Date</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="course_startDate" placeholder="Start Date" name="course[startDate]">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="course_finishDate">Finish Date</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="course_finishDate" placeholder="Finish Date" name="course[finishDate]">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="course_price">Price in BGN</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="course_price" placeholder="000.00" name="course[price]">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="course_priceText">Price Text</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="course_priceText" placeholder="Price Text" name="course[priceText]">
                    </div>
                </div>
                {{ form_row(form._token) }}
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('invoices_index') }}">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
   
   
{% endblock %}
