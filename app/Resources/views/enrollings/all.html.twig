{% extends 'base.html.twig' %}

{% block main %}

    {% for msg in app.session.flashbag.get('info')  %}
        <div class="alert alert-success" id="info">
            {{ msg }}
        </div>
    {% endfor %} 
      
    <a class="btn btn-primary" href="{{ path('enrolling_create') }}">New Enrolling</a>
    
    <div class="container body-content container-enrollings">
        <div class="row">
            <div class="col-md-12 col-title">
                <div class="col-md-2">    
                    <h4># Date Added</h4>
                </div>
                <div class="col-md-2">
                    <h4>Student</h4>
                </div>
                <div class="col-md-2">    
                    <h4>Personal &#x2116;</h4>
                </div>
                <div class="col-md-1">
                    <h4>Image</h4>
                </div>
                <div class="col-md-3">    
                    <h4>Course</h4>
                </div> 
                <div class="col-md-2">    
                    <h4>Invoice</h4>
                </div>
            </div>
        </div>
        <div class="row">
            {% for enrolling in pagination %}
                <div class="col-md-12 col-enrollings">
                    <div class="col-md-2">         
                        <h4>{{ enrolling.id }} {{ enrolling.dateAdded|date("Y-m-d") }}</h4>
                    </div>
                    <div class="col-md-2">
                        <h4>{{ enrolling.student.firstName }} {{ enrolling.student.lastName }}</h4>
                    </div>
                    <div class="col-md-2">    
                       <h4>{{ enrolling.student.PersonalNumber}}</h4>
                    </div>
                    <div class="col-md-1">
                        <a href="{{ path('student_view', { id: enrolling.student.id } ) }}">
                            <img src ="{{ asset('uploads/images/students/' ~ enrolling.student.image) }}" class="img-thumbnail img-enrollings">
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('course_view', { id: enrolling.course.id } ) }}">       
                            <h4>{{ enrolling.course.title}}</h4>
                        </a>
                    </div>
                    <div class="col-md-2">
                       <p><a href="{{ path('view_invoice', {id: enrolling.id}) }}" target=_blank>View</a></p>
                       <a class="btn btn-danger" href="{{ path('download_invoice', {id: enrolling.id}) }}">Download</a>  
                    </div>  
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container text-center">
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
   
{% endblock %}
